<!DOCTYPE suite SYSTEM "http://beust.com/testng/testng-1.0.dtd" >
<suite name="SystemSuite" verbose="1">
	<parameter name="orderingDataFile" value="./src/test/resources/ordering_test_data.xlsx" />
	<parameter name="loginDataFile" value="./src/test/resources/loginDataTest.xlsx" />
	<parameter name="workbookXlsDataFile" value="./src/test/resources/workbook.xls" />
	<parameter name="workbookXlsxDataFile" value="./src/test/resources/workbook.xlsx" />
	<parameter name="seleniumReportPathParam" value="target/reporting/detailed reports" />
	<parameter name="serverAddress" value="http://www.casus-belli.com/en/" />
	<parameter name="image_dir_name" value="img/"/>
	<parameter name="encoding" value="UTF-8"/>

	<test name="System">
		<groups>
			<run>
				<exclude name="system" />
				<exclude name="smoke" />
				<include name="dev" />
				<exclude name="data" />
			</run>
		</groups>

		<packages>
			<package name="com.companyname.casusbelli.core" />
			<package name="com.companyname.casusbelli.core.dataprovider" />
			<package name="com.companyname.casusbelli.testcases.smoke" />
			<package name="com.companyname.casusbelli.testcases.userregistration" />
			<package name="com.companyname.casusbelli.core.mail" />			
		</packages>
	</test>
</suite>
